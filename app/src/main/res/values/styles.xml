<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="frg_my_text">


        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">15dp</item>
        <!--
                <TextView
                    android:background=""
                    android:textSize=""
                    android:paddingLeft="15dp"
                    android:="15dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_history"
                    android:text="观看记录"
                    app:layout_constraintTop_toBottomOf="@id/bg_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@mipmap/icon_history"/>                -->


    </style>

    <style name="frg_my_iv">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/wq_next</item>
        <item name="android:tint">@color/my_iv_tint</item>


    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        //Dialog的windowFrame框为无
        <item name="android:windowFrame">@null</item>
        //是否浮现在activity之上
        <item name="android:windowIsFloating">true</item>
        //是否半透明
        <item name="android:windowIsTranslucent">true</item>
        //是否显示title
        <item name="android:windowNoTitle">true</item>
        //设置dialog的背景
        <item name="android:background">@android:color/transparent</item>
        //显示区域背景是否透明
        <item name="android:windowBackground">@android:color/transparent</item>
        //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5
        <item name="android:backgroundDimAmount">0.5</item>
        //显示区域以外是否使用黑色半透明背景
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
